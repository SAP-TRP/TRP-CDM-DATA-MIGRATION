FUNCTION UDF_UUID()
RETURNS RESULT NVARCHAR(36)
LANGUAGE SQLSCRIPT
SQL SECURITY INVOKER AS
BEGIN
	DECLARE ID VARBINARY(16);
	ID = TO_NVARCHAR(NEWUID());
	RESULT = 		  LOWER(SUBSTRING(ID, 1, 4)) 
			|| '-' || LOWER(SUBSTRING(ID, 5, 2))
	    	|| '-' || LOWER(SUBSTRING(ID, 7, 2))
	    	|| '-' || LOWER(SUBSTRING(ID, 9, 2))
	    	|| '-' || LOWER(SUBSTRING(ID, 11, 6));
END